{
  "manifest_version": 3,
  "name": "课程助手插件",
  "version": "0.1.0",
  "description": "上传文件并使用 License Key 自动选课。",
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": ["http://localhost/*", "https://localhost/*"],
  "action": {
    "default_icon": {
      "16": "icons/icon.svg",
      "48": "icons/icon.svg"
    }
  },
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost/*", "https://localhost/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
